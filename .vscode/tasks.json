{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch: ESBuild",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:esbuild",
                "--",
                "--watch",
            ],
            "problemMatcher": "$esbuild-watch",
            "presentation": {
                "reveal": "silent",
            },
            "group": {
                "kind": "build",
            },
            "isBackground": true,
        },
        {
            "label": "Watch: Check Types",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:check",
                "--",
                "--watch",
            ],
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "revealProblems": "onProblem",
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "isBackground": true,
        },
        {
            "label": "Watch: Webview",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:webview",
                "--",
                "--watch"
            ],
            "isBackground": true,
            "problemMatcher": "$esbuild-watch",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Watch: ESBuild with Web View",
            "dependsOn": [
                "Watch: ESBuild",
                "Watch: Webview"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        }
    ]
}
